void menuModificar(struct ministerio *ministerio) {
    int opcion;
    char bufferRUC[100];
    char bufferRUT[100];

    do {
        printf("\n========= MENÚ PRINCIPAL =========\n");
        printf("1. Modificar datos de diligencia\n");
        printf("2. Modificar datos de carpeta\n");
        printf("3. Modificar denuncia\n");
        printf("4. Cambiar estado de causa\n");
        printf("5. Modificar imputado en causa\n");
        printf("6. Cambiar tipo de involucrado\n");
        printf("7. Modificar persona por RUT\n");
        printf("0. Salir\n");
        printf("Seleccione una opción: ");

        if (scanf("%d", &opcion) != 1) {
            printf("Entrada inválida.\n");
            while (getchar() != '\n');  // limpiar buffer
            opcion = -1;
            continue;
        }

        while (getchar() != '\n');  // limpiar salto de línea

        switch (opcion) {
            case 1:
                modificarDatosDiligencia(ministerio);
                break;

            case 2:
                modificarDatosCarpeta(ministerio);
                break;

            case 3:
                modificarDenunciaMenu(ministerio);
                break;

            case 4:
                printf("Ingrese el RUC de la causa para cambiar su estado: ");
                if (fgets(bufferRUC, sizeof(bufferRUC), stdin)) {
                    bufferRUC[strcspn(bufferRUC, "\n")] = '\0';  // eliminar salto de línea
                    cambiarEstadoCausa(ministerio, bufferRUC);
                }
                break;

            case 5:
                printf("Ingrese el RUC de la causa: ");
                if (fgets(bufferRUC, sizeof(bufferRUC), stdin)) {
                    bufferRUC[strcspn(bufferRUC, "\n")] = '\0';
                    printf("Ingrese el RUT del imputado: ");
                    if (fgets(bufferRUT, sizeof(bufferRUT), stdin)) {
                        bufferRUT[strcspn(bufferRUT, "\n")] = '\0';
                        modificarImputado(ministerio, bufferRUC, bufferRUT);
                    }
                }
                break;

            case 6:
                cambiarTipoInvolucrado(ministerio);
                break;

            case 7:
                modificarPersonaPorRut(ministerio);
                break;

            case 0:
                printf("Saliendo del sistema...\n");
                break;

            default:
                printf("Opción inválida. Intente nuevamente.\n");
        }

    } while (opcion != 0);
}
