struct involucrados* buscarImputadoEnCausa(struct causa *c, const char *rutImputado) {
    if (c == NULL || rutImputado == NULL) {
        printf("Error: causa o RUT inv√°lido.\n");
        return NULL;
    }

    for (int i = 0; i < c->tamInvolucrados; i++) {
        struct involucrados *inv = c->involucrados[i];
        if (inv != NULL &&    inv->tipoInvolucrado == 2 && inv->persona != NULL && strcmp(inv->persona->rut, rutImputado) == 0) {
            return inv;
        }
    }
    return NULL;
}
