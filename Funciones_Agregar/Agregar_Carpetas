void agregarCarpetaInvestigativa(struct nodoDatosCarpetas **carpetas, struct datosCarpeta *nuevaCarpeta) {
    
    if(nuevaCarpeta == NULL){
        printf("Nueva carpeta no existe\n");
        return;
    }
    /*Definimos nuevo nodo para asignarle nuevaCarpeta*/
    struct nodoDatosCarpetas *nuevoNodo = (struct nodoDatosCarpetas *)malloc(sizeof(struct nodoDatosCarpetas));
    if(nuevoNodo == NULL){
        printf("Error al asignar memoria para el nuevo nodo\n");
        return;
    }

    nuevoNodo->datosCarpeta = nuevaCarpeta;
    nuevoNodo->siguiente = NULL;
    nuevoNodo->anterior = NULL;

    if(*carpetas == NULL){
        /*Si esta vacia asignar al inicio*/
        *carpetas = nuevoNodo;
    } else {
   
        struct nodoDatosCarpetas *actual = *carpetas;
        while(actual->siguiente != NULL) {
            actual = actual->siguiente;
        }
        actual->siguiente = nuevoNodo;
        nuevoNodo->anterior = actual;
    }
}
