void menuEliminar(struct ministerio *minsterio) {
    int opcion;
    char rut[30],ruc[30];
    printf("Ingrese una opcion:\n");
    printf("1. Eliminar persona\n");
    printf("2. Eliminar causa\n");
    printf("3. Eliminar denuncia\n");
    printf("4. Eliminar datos de carpeta\n");
    scanf("%d", &opcion);
    switch (opcion) {
        case 1:
            printf("Ingrese RUT de la persona a eliminar:\n");
            scanf("%s", rut);
            eliminarPersona(&(minsterio->personas), rut);
            break;
        case 2:
            printf("Ingrese RUC de la causa a eliminar:\n");
            scanf("%s", ruc);
            eliminarCausa(&(ministerio->causas), ruc);
            break;
        case 3:
            printf("Ingrese RUC de la denuncia a eliminar:\n");
            scanf("%s", ruc);
            eliminarDenuncia(&(ministerio->personas->denuncias), ruc);
            break;
        case 4:
            printf("Ingrese RUC de la carpeta a eliminar:\n");
            scanf("%s", ruc);
            eliminarDatosCarpeta(&(ministerio->causa->datosCarpeta), ruc);
            break;


    default:
        printf("Opcion no valida\n");

    }
};
