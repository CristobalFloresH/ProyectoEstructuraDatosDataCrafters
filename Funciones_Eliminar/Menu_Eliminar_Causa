void menuEliminarCausa(struct ministerio *ministerio) {
    int opcion;
    char rut[30], ruc[30];

    printf("Selecciona opci칩n:\n");
    printf("1. Eliminar Causa\n");
    printf("2. Eliminar Carpeta\n");
    printf("3. Eliminar Involucrado\n");
    printf("4. Eliminar Sentencia\n");
    scanf("%d", &opcion);

    switch (opcion) {
        case 1:
            printf("Ingrese RUC de la causa a eliminar:\n");
            scanf("%s", ruc);
            eliminarCausa(&(ministerio->causas), ruc);
            break;

        case 2:
            menuEliminarCarpeta(ministerio); // Asume que dentro se pregunta por el RUC
            break;

        case 3:
            printf("Ingrese RUT del involucrado a eliminar:\n");
            scanf("%s", rut);
            eliminarInvolucrado(&(ministerio->causas), rut);
            break;

        case 4:
            printf("Ingrese RUC de la sentencia a eliminar:\n");
            scanf("%s", ruc);
            struct nodoCausas *encontrado = buscarCausaPorRUC(ministerio->causas, ruc);

            if (encontrado != NULL && encontrado->datosCausa->sentencia != NULL) {
                free(encontrado->datosCausa->sentencia);
                encontrado->datosCausa->sentencia = NULL;
                printf("Sentencia eliminada correctamente.\n");
            } else {
                printf("No se encontr칩 sentencia para eliminar.\n");
            }
            break;

        default:
            printf("Opci칩n no v치lida.\n");
            break;
    }
}
