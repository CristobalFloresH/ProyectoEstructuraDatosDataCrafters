void eliminarCarpetaDeCausa(struct nodoCausas **listaCausas, char *ruc) {
    if (listaCausas == NULL || *listaCausas == NULL) {
        printf("No hay causas registradas.\n");
        return;
    }

    struct nodoCausas *actual = *listaCausas;

    do {
        if (strcmp(actual->datosCausa->ruc, ruc) == 0) {

            if (actual->datosCausa->datosCarpetas != NULL) {
                struct nodoDatosCarpetas *actualCarpeta = actual->datosCausa->datosCarpetas;

                while (actualCarpeta != NULL) {
                    struct nodoDatosCarpetas *sig = actualCarpeta->siguiente;
                    liberarDatosCarpeta(actualCarpeta->datosCarpeta);
                    free(actualCarpeta);
                    actualCarpeta = sig;
                }

                actual->datosCausa->datosCarpetas = NULL;
                printf("Carpetas eliminadas correctamente.\n");
            } else {
                printf("La causa no tiene carpetas asociadas.\n");
            }
            return;
        }
        actual = actual->siguiente;
    } while (actual != *listaCausas);
    
    printf("No se encontr√≥ una causa con ese RUC.\n");
}
