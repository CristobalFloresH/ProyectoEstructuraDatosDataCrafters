void eliminarDatoDeCarpetaPorTipo(struct nodoCausas **listaCausas, char *ruc, int tipoDeDato) {
    if (listaCausas == NULL || *listaCausas == NULL) {
        printf("No hay causas registradas.\n");
        return;
    }

    struct nodoCausas *actual = *listaCausas;

    do {
        if (strcmp(actual->datosCausa->ruc, ruc) == 0) {
            struct nodoDatosCarpetas *carpeta = actual->datosCausa->datosCarpetas;

            while (carpeta != NULL) {
                if (carpeta->datosCarpeta != NULL && carpeta->datosCarpeta->tipoDeDato == tipoDeDato) {
                    switch (tipoDeDato) {
                        case 1: // declaraciones
                        case 2: // pruebas
                            free(carpeta->datosCarpeta->descripcion);
                            free(carpeta->datosCarpeta->fecha);
                            break;

                        case 3: // diligencias
                            if (carpeta->datosCarpeta->datosDiligencias != NULL) {
                                liberarDatosDiligencias(carpeta->datosCarpeta->datosDiligencias);
                                free(carpeta->datosCarpeta->datosDiligencias);
                                carpeta->datosCarpeta->datosDiligencias = NULL;
                            }
                            break;

                        case 4: // denuncia
                            if (carpeta->datosCarpeta->datosDenuncia != NULL) {
                                liberarDenuncia(carpeta->datosCarpeta->datosDenuncia);
                                free(carpeta->datosCarpeta->datosDenuncia);
                                carpeta->datosCarpeta->datosDenuncia = NULL;
                            }
                            break;

                        default:
                            printf("Tipo de dato no válido.\n");
                            return;
                    }
                    printf("Dato eliminado correctamente.\n");
                    return; 
                }
                carpeta = carpeta->siguiente;
            }
            printf("No se encontraro el dato en especifico en carpetas.\n");
            return;
        }
        actual = actual->siguiente;
    } while (actual != *listaCausas);

    printf("No se encontró una Carpeta con ese RUC.\n");
}
